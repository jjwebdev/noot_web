- form_for @changeset, @action, fn f ->
  - if @changeset.action do
    .red.tc
      Oops, something went wrong! Please check the errors below.
  .form-group
    = text_input f, :username, placeholder: "username", class: "br2 ba b--silver pa3 tc w-100 mv1"
    .red.tc= error_tag f, :username
  .form-group
    = text_input f, :email, placeholder: "email", class: "br2 ba b--silver pa3 tc w-100 mv1"
    .red.tc= error_tag f, :email
  .form-group
    = password_input f, :password, placeholder: "password", class: "br2 ba b--silver pa3 tc w-100 mv1"
    .red.tc= error_tag f, :password
  .form-group
    = password_input f, :password_confirmation, placeholder: "confirm password", class: "br2 ba b--silver pa3 tc w-100 mv1"
    .red.tc= error_tag f, :password_confirmation
  .form-group
    = submit "Create account", class: "pa3 f5 br2 bg-white ba b--black center db w-third mt4"
